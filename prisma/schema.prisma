generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id           String   @id @default(uuid())
  numberAccont Int      @unique
  firstName    String
  lastName     String
  amount       Int
  createdAt    DateTime @default(now())

  Transactions Transaction[]

  @@map("accounts")
}

model Transaction {
  id        String @id @default(uuid())
  FirstName String
  LastName  String
  oldAmount Int
  newAmount Int

  Account   Account? @relation(fields: [accountId], references: [id])
  accountId String?

  @@map("transactions")
}
